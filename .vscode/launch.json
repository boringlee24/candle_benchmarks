    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${fileDirname}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0,1"
            },        
            "args": [ "--gpu-type", "v100", "--num-gpu", "2", 
                    "--iter-limit", "5000"]

        }
    ]
}